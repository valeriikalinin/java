package com.max.idea;
public class Main {
    public static void main (String[] args) {
    
                int[] a = new int[] {10, 20, 30, 40, 50}; //объявляем и инициализируем массив
                int first = a[0]; //сохранили в переменную значение первого элемента массива
                a[0] = a[a.length-1]; //в первый элемент массива положили последний элемент массива
                a[a.length-1] = first; //в последний элемент массива положили значение переменной b

                int middleNumber  = ((a.length-1)/ 2 ); //находим средний элемент
                int middleValue = a[middleNumber]; //записали число среднего элемента в переменную

                System.out.println("Сумма первого и среднего элемента = " + (a[0] + middleValue)); // выводим сумму элемента (первый элемент+третий элемент)


    }
}
